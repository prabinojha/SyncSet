<!DOCTYPE html>
<html lang="en">
<%- include('includes/head', {title: 'Dashboard'}) %>

    <body>
        <%- include('includes/header') %>
        <div class="dashboard-container">
            <aside class="sidebar">
                <nav>
                    <a href="/dashboard/overview" class="nav-item <%= active === 'overview' ? 'active' : '' %>">
                        <i class="fas fa-home"></i>
                        <span>Overview</span>
                    </a>
                    <a href="/dashboard/calendar" class="nav-item <%= active === 'calendar' ? 'active' : '' %>">
                        <i class="fas fa-calendar"></i>
                        <span>Calendar</span>
                    </a>
                    <a href="/dashboard/analytics" class="nav-item <%= active === 'analytics' ? 'active' : '' %>">
                        <i class="fas fa-chart-line"></i>
                        <span>Analytics</span>
                    </a>
                    <a href="/dashboard/services" class="nav-item <%= active === 'services' ? 'active' : '' %>">
                        <i class="fas fa-cog"></i>
                        <span>Services</span>
                    </a>
                </nav>
            </aside>
            <main class="dashboard-main">
                <%- include(`dashboard/${active}`) %>
            </main>
        </div>
    </body>

</html>